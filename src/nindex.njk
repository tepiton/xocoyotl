---
layout: base.njk
home: true
---

<h1 class="logo">{{ config.siteName }}</h1>

<ul class="tepiton">
  {%-for post in collections.tepiton | reverse -%}
  <li>
    <article>
      <header><a href={{post.url}}>{{post.data.title | markdown  | safe }}</a></header>
      <section>
        {% if post.data.summary -%}
          {{ post.data.summary | markdown | safe -}}
        {% else %}
          no summary
        {% endif %}
      </section>
      <footer><a href={{post.data.draft}}># {{post.date.toDateString()}}</a></footer>
    </article>
  </li>
  {% endfor -%}
</ul>
